@{
    ViewData["Title"] = "UpdateCategory";
}
@model UpdateCategoryDTO

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategori Güncelle</h3>
            </div>
            <form asp-action="UpdateCategory">
                <input type="hidden" asp-for="Id" />
                <div class="card-body">
                    <div>
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer" style="height:50px">
                    <input type="submit" class="btn btn-outline-success float-end" value="Güncelle" />
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-info float-start">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
